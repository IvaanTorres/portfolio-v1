{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./resources/ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
